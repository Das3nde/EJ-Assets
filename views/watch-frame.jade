extends layout

block head
  meta(http-equiv="Content-Type" content="text/html; charset=utf-8")

  // ZOOM LINKS
  link(rel="stylesheet" href="/stylesheets/anythingzoomer.css")
  script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js")
  script(src="/javascripts/jquery.anythingzoomer.js")
  script(src="/javascripts/watch-zoom.js")

  link(rel="stylesheet" type="text/css" href="/fonts/twcenfontskit.css")
  link(rel="stylesheet" type="text/css" href="/stylesheets/watch-detail.css")

  script(type='text/javascript' src='/javascripts/controllers/WatchDetailController.js')

  title Watch Detail

block content
  body.default(ng-controller="WatchDetailController" ng-init="getWatch(#{JSON.stringify(id)})")
    div.header
      div.row
    div.default
      div.row
        div.col-md-3(height="100%")
          a(href="http://www.elevenjames.com" target="_blank")
            img(ng-src="/images/logo.png" width="100%" style="margin-top:25px; margin-left: auto; margin-right: auto; display: block;")
        div.col-md-4(ng-show="watch.img")
          img(ng-src="{{'/images/' + watch.img}}" alt="{{watch.brand}} Small" style="width: 100%")
        div.col-md-4(style="padding-top:25px;")
          h3(ng-show="watch.ej_collection") {{watch.ej_collection}} Collection
          h3(ng-hide="watch.ej_collection") OUR COLLECTION
          h1 {{watch.brand}}
          h2 {{watch.family + ' ' + watch.model}}
          hr
          p {{watch.description_long}}
          div(ng-repeat="instruction in watch.instructions")
            p(ng-show="instruction.name || instruction.description")
              b
                | {{instruction.name}}
              |   {{instruction.description}}
            p.special
              | {{instruction.special}}
          div(ng-show="watch.trivia")
            h2 Did you know?
            p.trivia
              i
                | {{watch.trivia}}
