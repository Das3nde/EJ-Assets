extends layout

block head
  script(type='text/javascript' src='/javascripts/controllers/WatchFormController.js')

block content
  div.container(ng-controller="WatchFormController" style='display: none')
    form(novalidate, ng-submit="addWatch()")
      input(ng-model="newWatch.brand", placeholder="Brand")
      input(ng-model="newWatch.family", placeholder="Family")
      input(ng-model="newWatch.model", placeholder="Model")
      input(ng-model="newWatch.reference", placeholder="Reference")
      input(ng-model="newWatch.serial", placeholder="Serial Number")
      input(ng-model="newWatch.img", placeholder="Image Name")
      br
      button.btn.btn-success(type="submit") Add Watch

  div.container
    form.form-horizontal(role='form')
      div.form-group
        label.col-sm-1.control-label(for='brand') Brand
        div.col-sm-2
          input.form-control#brand(type='text' placeholder='Brand')
        label.col-sm-1.control-label(for='family') Family
        div.col-sm-2
          input.form-control#family(type='text' placeholder='Family')
        label.col-sm-1.control-label(for='model') Model
        div.col-sm-2
          input.form-control#model(type='text' placeholder='Model')
      div.form-group
        label.col-sm-1.control-label(for='reference') Reference
        div.col-sm-3
          input.form-control#reference(type='text' placeholder='Reference')
        label.col-sm-1.control-label(for='serial') Serial Number
        div.col-sm-4
          input.form-control#serial(type='text' placeholder='Serial Number')
      div.form-group
        label.col-sm-1.control-label(for='image') Image Link
        div.col-sm-2
          input.form-control#image(type='text' placeholder='Image Link')
      br
      div.form-group
        div
          label.col-sm-1.control-label(for='instruction') Instructions
          div.col-sm-2
            input.form-control#instruction(type='text' placeholder='Name')
          div.col-sm-3
            textarea.form-control(placeholder='Description')
          div.col-sm-3
            textarea.form_control(placeholder='Special Instructions')

      div.form-group
        button.btn.btn-info(type='button') Add Instruction

      div.form-group
        label.col-sm-1.control-label(for='description-long') Description
        div.col-sm-4
          textarea.form-control#description-long(placeholder='Description')
      div.form-group
        label.col-sm-1.control-label(for='description-short') Abridged Description
        div.col-sm-4
          textarea.form-control#description-short(placeholder='Abridged Description')
      div.form-group
        label.col-sm-1.control-label(for='trivia') Trivia
        div.col-sm-4
          textarea.form-control#trivia(placeholder='Trivia')



      div.form-group
        div.col-sm-offset-1.col-sm-2
          button.btn.btn-success(type='submit') Submit
